@model BangazonSite.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>My Cart</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>
    <div>
    </div>
    <br />
    <div>
        @foreach (var OrderProduct in Model.OrderProducts)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => OrderProduct.Product.Title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => OrderProduct.Product.Description)</p>
                    <dt>
                        |
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@OrderProduct.Product.Id">Details</a> |
                        <a asp-controller="Products" asp-action="DeleteFromOrder" asp-route-id="@OrderProduct.OrderProductId">Delete</a>
                        |
                    </dt>
                </div>
            </div>

        }

    </div>
</div>
