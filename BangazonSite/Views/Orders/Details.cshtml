@model BangazonSite.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>My Cart</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>
    <div>
        <dt class="col-sm-2">
            Products in Cart
        </dt>
    </div>
    <br />
    <div>
        @foreach (var OrderProduct in Model.OrderProducts)
        {
        
            <dt>
                @Html.DisplayFor(modelItem => OrderProduct.Product.Title) --
            </dt>
            <dd>
                ( @Html.DisplayFor(modelItem => OrderProduct.Product.Description) )
            </dd>

            <dt>
                |
                <a asp-controller="Products" asp-action="Details" asp-route-id="@OrderProduct.Product.Id">Details</a> |
                <a asp-controller="Products" asp-action="DeleteFromOrder" asp-route-id="@OrderProduct.OrderProductId">Delete</a> | 
                @*Write a method in Products to remove the product from ORderProduct instead of actually deleting it.*@
            </dt>
            <br />
        }

    </div>
</div>
<div>
